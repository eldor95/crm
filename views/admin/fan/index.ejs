<div class="row">
    <div class="col-12">

        <div style="
          display: flex;
          flex-direction: row;
          justify-content: space-between; 
          align-items: center;
        ">
            <h4 class="m-3" style="font-weight: 700;">Foydalanuvchilar bulimi</h4>

            <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target=".bs-example-modal-lg">
                Foydalanuvchi qushish
            </button>
        </div>

        <div class="card m-b-30">
            <div class="card-body">



                <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Learning center</th>
                            <th>Diler Name</th>
                            <th>Date</th>
                            <th>Update, Delete</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for(let item of result) {%>
                            <tr>
                                <td>
                                    <%= item.name%>
                                </td>
                                <td>
                                    <%= item.lc_ID.name%>
                                </td>
                                <td>
                                    <%= item.diler_ID.name%>
                                </td>
                                <td>
                                    <%= moment(item.createdAt).format("DD-MM-YYYY")  %>
                                </td>
                                <td style=" display: flex; flex-direction: row; justify-content: space-around; align-items: center;">

                                    <a class="btn btn-warning" href="<%=`/fan/${item._id}`%>">
                                        <i class="fas fa-cog"></i>
                                    </a>
                                    <form method="POST" class="hidden-r" action="<%=`/fan/${item._id}?_method=DELETE`%>">
                                        <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                    </form>
                                </td>

                            </tr>
                            <% } %>
                    </tbody>

                </table>

            </div>
        </div>
    </div>
    <!-- end col -->
</div>
<!-- end row -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myLargeModalLabel">Kategoriya yaratish</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/fan/create" method="POST">
                    <div class="mb-4">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" placeholder="Fanning nomini kiriting" />
                    </div>
                    <div class="mb-3 input-group mt-2" style="display: flex; flex-direction: column">
                        <label for="">Learning center tanlang </label>
                        <select name="lc_ID" class="form-control">
                            <option style="font-weight: bold">Tanlash ...</option>
                            <% for (let item of learning_center) {%>
                            <option value="<%= item._id %>">
                                <%= item.name %>
                            </option>
                            <% } %>
                        </select>
                    </div>
                    <div class="mb-3 input-group mt-2" style="display: flex; flex-direction: column">
                        <label for="">Dilerni tanlang </label>
                        <select name="diler_ID" class="form-control">
                            <option style="font-weight: bold">Tanlash ...</option>
                            <% for (let item of user) {%>
                            <option value="<%= item._id %>">
                                <%= item.name %>
                            </option>
                            <% } %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Saqlash</button>
                </form>
            </div>
        </div>
    </div>
</div>