<div class="pt-3 pb-3 pl-3">
    <h4>Fanlarni tahrirlash</h4>
</div>


<div class="row">
    <div class="col-md-10 mt-3">
        <form method="POST" action="<%=`/fan/${result._id}?_method=PUT`%>" class="col-md-8">
            <div class="mb-3">
                <label>Fanni Kiriting</label>
                <input type="text" class="form-control" value="<%= result.name %>" name="name" />
            </div>
            <div class="mb-3 input-group mt-2" style="display: flex; flex-direction: column">
                <label for="">Dilerni tanlang </label>
                <select name="diler_ID" class="form-control">
                  <option style="font-weight: bold">Tanlash ...</option>
                  <% for (let item of user) {%>
                    <option value="<%= item._id %>">
                      <%= item.name %>
                    </option>
                    <% } %>
                </select>
            </div>
            <div class="mb-3 input-group mt-2" style="display: flex; flex-direction: column">
                <label for="">Learning center tanlang </label>
                <select name="lc_ID" class="form-control">
                  <option style="font-weight: bold">Tanlash ...</option>
                  <% for (let item of learning_center) {%>
                    <option value="<%= item._id %>">
                      <%= item.name %>
                    </option>
                    <% } %>
                </select>
            </div>


            <button type="submit" class="btn btn-primary col-md-5 mt-3">Saqlash</button>
        </form>
    </div>
</div>